{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [".vitepress/*"],
      "@theme/*": [".vitepress/theme/*"]
    }
  },
  "include": ["**/*", ".vitepress/**/*"],
  "exclude": ["dist", ".obsidian", ".github"]
}
